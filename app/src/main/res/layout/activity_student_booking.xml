<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/windowBackground">

    <!-- text for filtering the sessions -->
    <EditText
        android:id="@+id/courseSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Search by course code"
        android:inputType="text" />


    <!-- view upcoming sessions -->


    <TextView
        android:id="@+id/availableLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceVariant"
        android:padding="8dp"
        android:text="Available Sessions"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/availableList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="2dp"
        android:background="?attr/colorSurface" />

    <!-- pending approvals -->
    <TextView
        android:id="@+id/requestedLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceVariant"
        android:padding="8dp"
        android:text="Requested Sessions"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/requestedList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="2dp"
        android:background="?attr/colorSurface" />

    <!-- past sessions -->
    <TextView
        android:id="@+id/bookedLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceVariant"
        android:padding="8dp"
        android:text="Booked Sessions"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/bookedList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="2dp"
        android:background="?attr/colorSurface" />

</LinearLayout>
