<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/windowBackground">

    <!-- Welcome header for student -->
    <TextView
        android:id="@+id/studentWelcomeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome, Student!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="16dp" />

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search for tutoring sessions by course code"
        android:textSize="14sp"
        android:textColor="?android:textColorSecondary"
        android:gravity="center"
        android:paddingBottom="12dp" />

    <!-- text for filtering the sessions -->
    <EditText
        android:id="@+id/courseSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ðŸ” Search by course code (e.g., CSI2105)"
        android:inputType="text"
        android:padding="12dp"
        android:textSize="16sp" />

    <!-- Button to view My Sessions (past sessions with rating) -->
    <Button
        android:id="@+id/mySessionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“ My Sessions (View &amp; Rate Past Sessions)"
        android:backgroundTint="?attr/colorSecondary"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />


    <!-- view upcoming sessions -->


    <TextView
        android:id="@+id/availableLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceVariant"
        android:padding="8dp"
        android:text="Available Sessions"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/availableList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="2dp"
        android:background="?attr/colorSurface" />

    <!-- pending approvals -->
    <TextView
        android:id="@+id/requestedLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceVariant"
        android:padding="8dp"
        android:text="Requested Sessions"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/requestedList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="2dp"
        android:background="?attr/colorSurface" />

    <!-- past sessions -->
    <TextView
        android:id="@+id/bookedLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceVariant"
        android:padding="8dp"
        android:text="Booked Sessions"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/bookedList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="2dp"
        android:background="?attr/colorSurface" />

</LinearLayout>
