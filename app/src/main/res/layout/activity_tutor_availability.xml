<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/highestDegreeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highest Degree:"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/highestDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/courseSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>
    <EditText
        android:id="@+id/dateInput"
        android:hint="Date (e.g. 2025-11-09)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/StartTimeInput"
        android:hint="Start Time (e.g. 10:00)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/EndTimeInput"
        android:hint="End Time (e.g. 11:00)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/AddButton"
        android:text="Add Availability Slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"/>

    <ListView
        android:id="@+id/SlotList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>